@{ ViewData["Title"] = "Главная";
                Layout = null; }
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Главная</title>
    <link rel="stylesheet" href="~/css/min.bundle/bundle.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous"
          asp-fallback-href="~/lib/bootstrap-5.0.0-beta2-dist/css/bootstrap.min.css"
          asp-fallback-test-class="hidden" asp-fallback-test-property="visibility" asp-fallback-test-value="hidden">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"
            asp-fallback-src="~/lib/bootstrap-5.0.0-beta2-dist/js/bootstrap.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.js"
            asp-fallback-test="window.jQuery"></script>
    <script src="~/lib/jquery-ajax-unobtrusive-master/src/jquery.unobtrusive-ajax.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="~/css/footer.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400&display=swap" rel="stylesheet">
    <style>
        body {
            background: #F5E944;
        }
    </style>
</head>
<body>
    <div class="white shadow-sm">
        <header>
            <div class="klukva">
                Клюква
            </div>
            <div class="button" id="button" width="30">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <div class="company">
                <a href="#">
                    <div class="logo">
                        <img src="~/img/interior design.png" />
                    </div>
                    <div class="companyname">
                        <img src="~/img/interior design — копия.png" width="400" />
                    </div>
                </a>
            </div>
            <nav>
                <div class="flex-container" id="menu">
                    <div class="menu-item">
                        <a asp-controller="Home" asp-action="Index">
                            Главная
                        </a>
                    </div>
                    <div class="menu-item">
                        <a href="#">
                            Магазин
                        </a>
                    </div>
                    <div class="menu-item">
                        <a href="#">
                            О нас
                        </a>
                    </div>
                    <div class="menu-item">
                        <a href="#">
                            Контакты
                        </a>
                    </div>
                </div>
                <div class="content">
                    <a asp-controller="Cart" asp-action="AllCart">
                        <div class="allcart">
                            <div class="cart">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                                </svg>
                            </div>
                            <div class="cart">
                                Корзина
                            </div>
                        </div>
                    </a>
                    <div class="search">
                        <form>
                            <div class="search1">
                                <input type="search" />
                            </div>
                            <div class="search2">
                                <input type="submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="main-content shadow-sm">
                <div class="slider" id="slider-controller">
                    <div style="background-color: green" class="kkkk"></div>
                    <div style="background-color: blue" class="kkk"></div>
                    <div style="background-color: orange" class="kkk"></div>
                    <div style="background-color: purple" class="kkk"></div>
                </div>
                <div class="container-for-product">
                    @foreach (var item in Model.Products)
                    {
        <div class="product">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                <div class="product-name">@item.Name</div>
                <div class="product-img">
                    <img src="@item.Img" />
                </div>
                <div>
                    @item.Price.ToString("c")
                </div>
                <div>
                    @item.ShortDesc
                </div>
            </a>
        </div>}
                </div>
            </div>
        </main>
        <div class="comments">
            <div class="mt-2 border-start">
                <div class="form ms-4">
                    <label for="comment" class="form-label">Ваш комментарий</label>
                    <textarea id="comment" class="form-control" rows="4">
                    </textarea>
                </div>
                <div class="form-name ms-4">
                    <label for="user-name" class="form-label">Ваше имя</label>
                    <input type="text" id="user-name" class="form-control" />
                    <input type="button" value="Отправить" id="send-button" class="btn btn-warning mt-2" />
                </div>
            </div>
            <div id="comment-box" class="ms-4 mt-5 me-4">
                @for (int i = Model.Comments.Count - 1; i >= 0; i--)
                {
                    <div class="mt-3">
                        <div class="com-img">
                            <img src="~/img/noavatar92.png" class="avatar" />
                        </div>
                          <div class="comment-contetnt ms-1">
                                <span class="user-name">@Model.Comments[i].NameUser</span>
                                <span>@Model.Comments[i].CommentDate.ToLocalTime().ToString()</span>
                                <p>@Model.Comments[i].Letter</p>
                          </div>
                    </div>
                 }

            </div>
        </div>
        @await Component.InvokeAsync("Footer")
    </div>
    <script src="~/js/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/min.bundle/bundle.min.js"></script>
</body>
</html>